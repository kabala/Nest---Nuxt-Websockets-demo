{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["esnext", "esnext.asynciterable", "dom"],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "paths": {
      "~/*": ["client/*"]
    },
    "types": ["@types/node", "@nuxt/types", "@types/socket.io"]
  },
  "include": ["server/**/*", "client/**/*"]
}
